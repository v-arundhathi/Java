import java.io.*;
import java.util.*;
class Squarepattern
{
public static void main(String args[])
{
Scanner s= new Scanner(System.in);
System.out.println("Enter no of rows =");
int n=s.nextInt();
int i,j;
for(i=1;i<=n;i++)
{
for(j=1;j<=n;j++)
{
System.out.print(" *");
}
System.out.println();
}
}
}
