import java.io.*;
import java.util.*;
class Pyramidnum
{
public static void main(String args[])
{
Scanner s= new Scanner(System.in);
System.out.println("Enter no of rows =");
int n=s.nextInt();
int i,j,k;
for(i=1;i<=n;i++)
{
for(k=n;k>=i;k--){
System.out.print(" ");}
for(j=1;j<=i;j++) 
{
System.out.print(" "+j);
}
for(j=i-1;j>=1;j--) 
{
System.out.print(" "+(j*j));
}
System.out.println();
}
}
}
