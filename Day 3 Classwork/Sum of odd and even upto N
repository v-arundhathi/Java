import java.io.*;
import java.util.*;
class Oddsumandeven
{
public static void main(String args[])
{
Scanner s= new Scanner(System.in);
System.out.println("Enter n =");
int n=s.nextInt();
int i,sum1=0,sum2=0;
for(i=0;i<=n;i++)
{
if(i%2==1)
{
	sum1+=i;
}
else
	sum2+=i;

}
System.out.println("odd sum ="+sum1);
System.out.println("even sum ="+sum2);

}
}


